@{

}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @RenderPage("Header.cshtml")
</head>
<body>
    @RenderPage("Navbar.cshtml")
    <section>
        <h1>Home</h1>
        <h3>Welkom bij Fondanti!</h3>
        <div class="container">
            <div class="row justify-content-center">
                <div id="carouselExampleIndicators" class="carousel slide d-block w-50" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100 carousel_test" src="~/Images/minecraft.jpg" alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Minecraft verjaardagstaart</h5>
                                <p>Leuke verjaardagtaart voor de jarige Henk</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 carousel_test" src="~/Images/trouwerij.jpg" alt="Second slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Prachtige trouwtaart</h5>
                                <p>Viel vooral heerlijk in de smaak ;p</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 carousel_test" src="~/Images/verjaardag.jpg" alt="Third slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Verjaardagstaart</h5>
                                <p>Voor de 2 jarige Fedde</p>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
    @RenderPage("Footer.cshtml")
</body>
</html>